<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="container-fluid">
        <%= gravatar_for @user, size: 80 %>
      </div>
      <h1><%= @user.name %></h1>
      <h2><%= @user.company %></h2>
      <h2><%= @user.location %></h2>
      </br>
      <%= link_to "Followings", followings_path, class: "btn btn-primary" %>
      <%= link_to "Followers", followers_path, class: "btn btn-primary" %>
      </br>
      </br>
      <p><%= @user.profile %><p>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

