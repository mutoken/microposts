<h1>Edit profiles</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <!-- <%= render 'shared/error_messages', object: f.object %> --!>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :company %>
      <%= f.text_field :company %>

      <%= f.label :profile %>
      <%= f.text_area :profile %>

      <%= f.submit "Update my profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>